@model IEnumerable<Demo_Project_MVC.Models.Product>

@{
    ViewBag.Title = "DisplayProduct";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "CreateProduct", "Product", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PQunt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PQunt)
    </td>
    <td>
        @Html.ActionLink("Edit", "Updateproduct", "Product", new { id = item.Id }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Details", "Details", "Product", new { id = item.Id }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Delete", "DeleteProduct", "Product", new { id = item.Id }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
